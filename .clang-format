# Clang Format File
---
Language: Cpp
BasedOnStyle: Google
ColumnLimit: 100
IndentWidth: 2

# Braces formatting
BreakBeforeBraces: Attach
#BreakBeforeBraces: Stroustrup

# Pointer (*) and Reference (&) formatting
DerivePointerAlignment: false
PointerAlignment: Left

# Miscellaneous formatting
AllowShortFunctionsOnASingleLine: Empty
BreakBeforeBinaryOperators: NonAssignment
IndentCaseLabels: false
PenaltyReturnTypeOnItsOwnLine: 120
SpaceAfterCStyleCast: true
IncludeBlocks: Regroup
IncludeCategories:
  - Regex:    '^<(assert|complex|ctype|errno|fenv|float|inttypes|iso646|limits|locale|math|setjmp|signal|stdalign|stdarg|stdatomic|stdbool|stddef|stdint|stdio|stdlib|stdnoreturn|string|tgmath|threads|time|uchar|wchar|wctype)\.h>'
    Priority: 0
  - Regex:    '^<(algorithm|any|array|atomic|barrier|bit|bitset|cassert|cctype|cerrno|cfenv|cfloat|charconv|chrono|cinttypes|climits|clocale|cmath|codecvt|compare|complex|concepts|condition_variable|coroutine|csetjmp|csignal|cstdarg|cstddef|cstdint|cstdio|cstdlib|cstring|ctime|cuchar|cwchar|cwctype|deque|exception|execution|filesystem|format|forward_list|fstream|functional|future|initializer_list|iomanip|ios|iosfwd|iostream|istream|iterator|latch|limits|list|locale|map|memory|memory_resource|mutex|new|numbers|numeric|optional|ostream|queue|random|ranges|ratio|regex|scoped_allocator|semaphore|set|shared_mutex|source_location|span|sstream|stack|stdexcept|stop_token|streambuf|string|string_view|strstream|syncstream|system_error|thread|tuple|type_traits|typeindex|typeinfo|unordered_map|unordered_set|utility|valarray|variant|vector|version)>'
    Priority: 1
  - Regex:    '^<[A-Za-z]*(\.h)?>'
    Priority: 2
  - Regex:    '<rtr.*/'
    Priority: 4
  - Regex:    '^"rtr.*/'
    Priority: 5
  - Regex:    '<.*>'
    Priority: 3
  - Regex:    '".*"'
    Priority: 6
...
